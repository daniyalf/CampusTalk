@model CampusChat.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Username")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.UserName)
        </dd>

        <dt>
            @Html.Label("Category")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.Label("Time Posted")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostedTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Upvotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Upvotes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Downvotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Downvotes)
        </dd>

    </dl>
    <hr />
    <h4>Comments</h4>
    <table class="table">
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.AspNetUser.UserName)</strong>
                    <br />
                    <br />
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>@Html.DisplayFor(modelItem => item.PostedTime)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Return to posts", "Index")
</p>
