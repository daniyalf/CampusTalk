@model CampusChat.Models.AspNetUser

@{
    ViewBag.Title = "ViewOtherUserProfile";
}

<h2>Profile</h2>

<div>
    <h4>@Html.DisplayFor(model => model.UserName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProfilePic)
        </dt>

        <dd>
            @{
                var imgSource = String.Format("data:image/gif;base64,{0}", Model.ProfilePic);
            }
            <img src="@imgSource" />
        </dd>

        <dt>
            Name: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)  
            @Html.ActionLink("Send Message", "../Messages/Create")
        </dd>

        <dt>
            University
        </dt>

        <dd>
            @Html.DisplayFor(model => model.University.Name)
        </dd>

        <dt>
            Email: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Major: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Major)
        </dd>

        <dt>
            Graduation Date: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpectedGraduationDate)
        </dd>

        <dt>
            About me: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Biography)
        </dd>
    </dl>
</div>
