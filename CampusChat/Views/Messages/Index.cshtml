@model IEnumerable<CampusChat.Models.Message>

@{
    ViewBag.Title = "Inbox";
}

<h2 style= "text-align:center">Inbox</h2>

<p>
    @Html.ActionLink("New Message", "Create")
</p>


<table class="table">
    <tr>
        <th>
            From
        </th>
        <th>
            Message
        </th>
        <th>
            @Html.Label("Sent Time")
        </th>
    </tr>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser1.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SentTime)
            </td>

            <td>
                <input type="button" class="btn btn-sm btn-info" value="Reply" onclick="location.href='@Url.Action("Create", new { id = item.MessageID })'" />
                <input type="button" class="btn btn-sm btn-default" value="Details" onclick="location.href='@Url.Action("Details", new { id = item.MessageID })'" />
                <input type="button" class="btn btn-sm btn-danger" value="Delete" onclick="location.href='@Url.Action("Delete", new { id = item.MessageID })'" />

            </td>
        </tr>
    }

</table>
<p>@Html.ActionLink("See Sent Messages", "SentMessages")</p>
